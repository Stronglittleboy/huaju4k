{
  "description": "优化版话剧视频增强配置 - 集成并行处理、智能内存管理、GPU加速和专业音频增强",
  "version": "2.0",
  "target_scenario": "theater_drama_optimized",
  
  "video_processing": {
    "ai_model": "realesrgan-x4plus",
    "scale_factor": 2,
    "base_tile_size": 640,
    "overlap_pixels": 64,
    "gpu_memory_threshold": 0.85,
    "description": "视频处理核心参数 - 2x放大到4K分辨率"
  },
  
  "parallel_processing": {
    "max_extraction_threads": 8,
    "max_processing_workers": 4,
    "batch_size": 4,
    "queue_size": 50,
    "enable_multiprocessing": true,
    "description": "并行处理配置 - 多线程帧提取，多进程AI增强"
  },
  
  "memory_management": {
    "adaptive_tile_sizing": true,
    "memory_monitoring": true,
    "gc_interval": 10,
    "memory_cleanup_threshold": 0.9,
    "cleanup_intermediate": true,
    "description": "智能内存管理 - 自适应分块大小和内存监控"
  },
  
  "gpu_optimization": {
    "cuda_enabled": true,
    "memory_preallocation": true,
    "batch_inference": true,
    "gpu_monitoring": true,
    "tensorrt_optimization": false,
    "description": "GPU优化配置 - CUDA加速和内存优化"
  },
  
  "audio_enhancement": {
    "enabled": true,
    "noise_reduction_strength": "medium",
    "eq_boost_speech": 4,
    "dynamic_compression": true,
    "spatial_enhancement": true,
    "output_quality": "high",
    "description": "专业音频增强 - 降噪、均衡、压缩、空间优化"
  },
  
  "performance_targets": {
    "target_fps": 5.0,
    "max_processing_hours": 3.0,
    "cpu_utilization_target": 0.85,
    "gpu_utilization_target": 0.85,
    "memory_efficiency_target": 0.8,
    "description": "性能目标 - 预期达到5fps处理速度，3小时内完成"
  },
  
  "quality_settings": {
    "video_codec": "libx264",
    "video_preset": "medium",
    "video_crf": 18,
    "audio_codec": "aac",
    "audio_bitrate": "192k",
    "audio_sample_rate": 48000,
    "description": "输出质量设置 - 高质量H.264编码和AAC音频"
  },
  
  "hardware_profiles": {
    "current_system": {
      "description": "当前系统配置 - GTX 1650 4GB",
      "gpu_memory_gb": 4.0,
      "recommended_tile_size": 768,
      "max_batch_size": 4,
      "expected_fps": 4.0
    },
    "high_end_system": {
      "description": "高端系统配置 - RTX 4070+ 16GB",
      "gpu_memory_gb": 16.0,
      "recommended_tile_size": 1024,
      "max_batch_size": 8,
      "expected_fps": 12.0
    }
  },
  
  "optimization_features": {
    "parallel_frame_extraction": {
      "enabled": true,
      "description": "并行帧提取 - 多线程I/O操作"
    },
    "adaptive_tile_processing": {
      "enabled": true,
      "description": "自适应分块处理 - 根据GPU内存动态调整"
    },
    "intelligent_batching": {
      "enabled": true,
      "description": "智能批处理 - 优化内存使用和处理速度"
    },
    "gpu_accelerated_preprocessing": {
      "enabled": true,
      "description": "GPU加速预处理 - CUDA操作优化"
    },
    "professional_audio_enhancement": {
      "enabled": true,
      "description": "专业音频增强 - 多级音频处理管道"
    },
    "real_time_monitoring": {
      "enabled": true,
      "description": "实时监控 - CPU/GPU/内存使用率监控"
    }
  }
}